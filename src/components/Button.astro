---
interface Props {
  type?: 'primary' | 'secondary'
  align: 'left' | 'center' | 'right'
  href: string
}

const { align, href } = Astro.props

const position = () => {
  switch (align) {
    case 'left':
      return 'mr-auto'
    case 'center':
      return 'mx-auto'
    case 'right':
      return 'ml-auto'
    default:
      return 'mx-auto'
  }
}
---

<a
  href={href}
  class={`bg-black hover:bg-black/50 transition-colors text-white py-3 px-5 rounded-full font-bold text-xl md:text-2xl block ${position()} w-max my-10`}
>
  <slot />
</a>
